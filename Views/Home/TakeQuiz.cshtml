@{
    ViewData["Title"] = "Take quiz";
}

@section Styles {
    <link rel="stylesheet" href="~/css/takequiz.css" />
}

<div class="container pt-4">
    <form>
        <div class="take-quiz-card take-quiz-card-title mb-4">
            <span class="fs-4">Quiz name here</span>
        </div>

        @*Quiz question*@
        <div class="take-quiz-question take-quiz-card">
            <span class="take-quiz-question-text fs-5">Cho biết 1 + 1 bằng mấy</span>

            <div class="mt-3">
                <div class="take-quiz-answer mb-3">
                    <input type="radio" class="form-check-input take-quiz-form-check me-2" name="question1" value="a">
                    <label class="form-check-label">1 + 1 = 2</label>
                </div>

                <div class="take-quiz-answer mb-3">
                    <input type="radio" class="form-check-input take-quiz-form-check me-2" name="question1" value="b">
                    <label class="form-check-label">1 + 1 = 3</label>
                </div>

                <div class="take-quiz-answer mb-3">
                    <input type="radio" class="form-check-input take-quiz-form-check me-2" name="question1" value="c">
                    <label class="form-check-label">1 + 1 = 0</label>
                </div>

                <div class="take-quiz-answer mb-3">
                    <input type="radio" class="form-check-input take-quiz-form-check me-2" name="question1" value="d">
                    <label class="form-check-label">1 + 1 = 11</label>
                </div>
            </div>

            <button class="take-quiz-clear" type="button">Clear answer</button>
        </div>

        @*Quiz question*@
        <div class="take-quiz-question take-quiz-card">
            <span class="take-quiz-question-text fs-5">Cho biết 1 + 1 bằng mấy</span>

            <div class="mt-3">
                <div class="take-quiz-answer mb-3">
                    <input type="radio" class="form-check-input take-quiz-form-check me-2" name="question2" value="a">
                    <label class="form-check-label">1 + 1 = 2</label>
                </div>

                <div class="take-quiz-answer mb-3">
                    <input type="radio" class="form-check-input take-quiz-form-check me-2" name="question2" value="b">
                    <label class="form-check-label">1 + 1 = 3</label>
                </div>

                <div class="take-quiz-answer mb-3">
                    <input type="radio" class="form-check-input take-quiz-form-check me-2" name="question2" value="c">
                    <label class="form-check-label">1 + 1 = 0</label>
                </div>

                <div class="take-quiz-answer mb-3">
                    <input type="radio" class="form-check-input take-quiz-form-check me-2" name="question2" value="d">
                    <label class="form-check-label">1 + 1 = 11</label>
                </div>
            </div>

            <button class="take-quiz-clear" type="button">Clear answer</button>
        </div>

        @*Submit btn*@
        <button type="submit" class="myButton myButton-primary mt-4">Submit</button>
    </form>
</div>

@section Scripts {
    <script src="~/js/takequiz.js"></script>
}