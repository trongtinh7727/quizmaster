@using Microsoft.AspNetCore.Identity
@using QuizMaster.Models

@inject SignInManager<QuizMasterUser> SignInManager
@inject UserManager<QuizMasterUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item d-flex align-items-center mx-2">
            <a id="manage" class="myNav-link text-decoration-none p-2 fw-semibold" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-danger fw-semibold">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">
            <button type="button" class="myButton myButton-secondary">Login</button>    
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">
            <button type="button" class="myButton myButton-primary">Register</button>
        </a>
    </li>
}
</ul>
