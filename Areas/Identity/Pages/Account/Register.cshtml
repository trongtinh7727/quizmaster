@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = "_AccountLayout";
}

<div class="vh-100 d-flex">
    <div class="w-50">
        <div class="w-50 h-100 m-auto">
            <div class="d-flex flex-column m-auto h-100 justify-content-center">
                <h1 class="fw-bold text-color2">@ViewData["Title"]</h1>

                <div class="d-flex mb-3">
                    <p class="text-gray-dark me-3">Already have an account?</p>
                    <p>
                        <a class="link-primary fw-bold" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Log in</a>
                    </p>
                </div>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control myInput" placeholder="Email" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Input.FirstName"></label>
                        <input asp-for="Input.FirstName" class="form-control myInput" placeholder="FirstName" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Input.LastName"></label>
                        <input asp-for="Input.LastName" class="form-control myInput" placeholder="Username" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control myInput" placeholder="Password" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="mb-5">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control myInput" placeholder="Confirm Password" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button id="registerSubmit" type="submit" class="w-100 myButton myButton-primary">Register</button>
                </form>
            </div>
        </div>
    </div>

    <div id="photo" class="w-50"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
