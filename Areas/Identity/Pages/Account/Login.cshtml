@page
@model LoginModel

@{
    ViewData["Title"] = "Sign In";
    Layout = "_AccountLayout";
}

<div class="vh-100 d-flex">
    <div class="w-50">
        <div class="w-50 h-100 m-auto">
            <div class="d-flex flex-column m-auto h-100 justify-content-center">
                <h1 class="fw-bold text-color2">@ViewData["Title"]</h1>

                <div class="d-flex mb-3">
                    <p class="text-gray-dark me-3">Don't have an account?</p>
                    <p>
                        <a class="link-primary fw-bold" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create now</a>
                    </p>
                </div>


                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control myInput" placeholder="Email" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-control myInput" placeholder="Password" autocomplete="current-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mb-4">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        <p>
                            <a class="link-primary fw-bold" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                    </div>

                    <div>
                        <button id="login-submit" type="submit" class="w-100 myButton myButton-primary">Log in</button>
                    </div>
@*                    <div>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>*@
                </form>
            </div>
        </div>
    </div>


    <div id="photo" class="w-50"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
